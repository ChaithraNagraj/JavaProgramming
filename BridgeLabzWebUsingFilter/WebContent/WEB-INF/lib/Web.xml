<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Web Application</display-name>
	<welcome-file-list><welcome-file>register.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
	<servlet-name>LoginRegisterServlet</servlet-name>
	<servlet-class>com.bridgelabz.webapp.controller.LoginRegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>LoginRegisterServlet</servlet-name>
	<url-pattern>/LoginRegisterServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>ProfileServlet</servlet-name>
	<servlet-class>com.bridgelabz.webapp.controller.ProfileServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>ProfileServlet</servlet-name>
	<url-pattern>/ProfileServlet</url-pattern>
	</servlet-mapping>

	
	<servlet>
	<servlet-name>FriendsServlet</servlet-name>
	<servlet-class>com.bridgelabz.webapp.controller.FriendsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>FriendsServlet</servlet-name>
	<url-pattern>/FriendsServlet</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
	<servlet-name>LogoutServlet</servlet-name>
	<servlet-class>com.bridgelabz.webapp.controller.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>LogoutServlet</servlet-name>
	<url-pattern>/LogoutServlet</url-pattern>
	</servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>
 